<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ExifEditor.Views.MainWindow"
        Title="ExifEditor">
    <Grid Margin="10" Background="#EEEEEE">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="DirPath" HorizontalAlignment="Left" VerticalAlignment="Top" Text="- none -"/>
        <Button Grid.Row="0" Grid.Column="3" Content="Select Directory" Background="Orange" Click="OnSelectDirectoryClick"/>
        <Button Grid.Row="1" Grid.Column="0" Click="OnButtonClick">Show</Button>
        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="outputText" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
